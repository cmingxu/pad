<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="条形码"
            android:id="@+id/barcode" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="扫描"
            android:id="@+id/scan" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:background="@drawable/denglu" android:textColor="#ffffff" android:textSize="25dp"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/xunjianxiangmus" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
</LinearLayout>