<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:gravity="center_horizontal"
                android:layout_marginTop="10dip">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <ImageButton
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/maintain_btn" android:src="@drawable/renwu"
                        android:background="@null" android:layout_margin="2dip"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="维修"
                        android:id="@+id/textView" android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:id="@+id/imageButton1"
                             android:layout_column="3" android:src="@drawable/shenpi" android:layout_gravity="center"
                             android:background="@null" android:layout_margin="2dip"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="测试" android:id="@+id/textView1" android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="fill_parent">
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:id="@+id/imageButton4" android:src="@drawable/renwu"
                             android:layout_gravity="left|center_vertical" android:background="@null"
                             android:layout_margin="2dip"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="测试"
                          android:id="@+id/textView4" android:layout_gravity="center_horizontal"/>
            </LinearLayout>

        </TableRow>
        <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:gravity="center_horizontal" android:id="@+id/tableRow" android:layout_marginTop="10dip">
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="fill_parent">
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:id="@+id/imageButton2" android:src="@drawable/renwu"
                             android:layout_gravity="center" android:background="@null" android:layout_margin="2dip"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="测试"
                          android:id="@+id/textView2" android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="fill_parent">
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:id="@+id/imageButton3" android:layout_gravity="right|center_vertical"
                             android:layout_column="3" android:src="@drawable/shenpi" android:background="@null"
                             android:layout_margin="2dip"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="测试"
                          android:id="@+id/textView3" android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="fill_parent">
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                             android:id="@+id/logout_btn" android:layout_gravity="right|center_vertical"
                             android:layout_column="3" android:src="@drawable/shenpi" android:background="@null"
                             android:layout_margin="2dip"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="退出"
                          android:id="@+id/textView5" android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </TableRow>

    </TableLayout>
</LinearLayout>

