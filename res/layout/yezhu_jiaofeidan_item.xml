<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="138dp"
            android:layout_height="69dp"
            android:text="水费"
            android:id="@+id/item"
            android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:textSize="30dp"
            android:padding="10dp"/>
    <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="1342 元"
            android:id="@+id/amount"
            android:layout_alignLeft="@+id/due" android:layout_alignTop="@+id/item"
            android:textColor="@color/red" android:paddingTop="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10月7日"
            android:id="@+id/due"
            android:layout_alignParentLeft="true" android:layout_marginLeft="168dp" android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"/>
</RelativeLayout>