<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/notice" android:layout_alignParentLeft="true" android:textSize="18dp"
            android:paddingLeft="10dp" android:textColor="#000000" android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon" android:layout_alignParentRight="true" android:padding="10dp"/>
</RelativeLayout>