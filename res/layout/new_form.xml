<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              style="@style/overall"
              android:layout_height="match_parent">

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address_choose_text" android:clickable="true" android:maxLines="1" android:hint="报修地址"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:background="@drawable/text_view_border" android:layout_marginTop="10dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="2013/3/28"
            android:id="@+id/time" android:editable="false" android:enabled="false" android:maxLines="1"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:background="@drawable/text_view_border"
            android:layout_marginTop="5dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zhuhuName" android:layout_gravity="center" android:hint="业主姓名"
            android:layout_marginRight="10dp" android:layout_marginLeft="10dp"
            android:background="@drawable/text_view_border"
            android:layout_marginTop="5dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zhuHuPhone" android:layout_gravity="center" android:hint="业主电话"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:background="@drawable/text_view_border"
            android:layout_marginTop="5dp"/>
    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/categories" android:layout_gravity="center" android:layout_marginLeft="10dp"
            android:background="@drawable/text_view_border"

            android:layout_marginRight="10dp" android:layout_marginTop="5dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/baoxiuneirong" android:layout_gravity="center" android:lines="1" android:longClickable="true"
            android:gravity="top" android:hint="维修内容" android:focusable="true"
            android:layout_marginRight="10dp" android:layout_marginLeft="10dp"
            android:background="@drawable/text_view_border"
            android:layout_marginTop="5dp" android:minLines="3"/>
        <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/image_container"
                    >
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/camera" android:src="@drawable/camera"
                        />
            </LinearLayout>
        </ScrollView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center" android:gravity="center_horizontal">
        <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="保存"
                android:id="@+id/saveBtn"
                android:textColorHighlight="@color/abs__background_holo_light"
                android:textColor="@color/abs__background_holo_light" android:textSize="25dp"
                style="@style/big_button" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
    </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>