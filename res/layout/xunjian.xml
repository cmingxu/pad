<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XJ00006巡检：  2013-6-1"
            android:id="@+id/textView" android:layout_marginTop="5dip" android:layout_marginBottom="5dip"
            android:textSize="20dip" android:layout_marginLeft="10dip"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="巡检点： 水喉枪，水带/枪，干粉灭火器"
            android:id="@+id/textView1" android:layout_marginLeft="10dip" android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip" android:textSize="20dip"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="巡检项目： 门"
            android:id="@+id/textView2" android:textSize="20dip" android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip" android:layout_marginBottom="5dip"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="巡检点标识："
                android:id="@+id/textView3" android:layout_marginLeft="10dip" android:textSize="20dip"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="21dp">
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正常"
                android:id="@+id/radioButton" android:checked="false"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无标"
                android:id="@+id/radioButton1" android:checked="false"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下个巡检点： 水喉枪， 水带/枪，干粉灭火器"
            android:id="@+id/textView4" android:textSize="20dip" android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip" android:layout_marginBottom="5dip"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:gravity="center_horizontal">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:id="@+id/button"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="上一个"
                android:id="@+id/button1"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="下一个"
                android:id="@+id/button2"/>
    </LinearLayout>
</LinearLayout>