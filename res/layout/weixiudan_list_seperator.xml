<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="#80ffdf" android:clickable="false">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/display" android:layout_weight="1" android:textSize="20dip" android:textStyle="bold"
            android:layout_marginLeft="5dip" android:layout_alignParentLeft="true" android:gravity="center_vertical"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传"
            android:id="@+id/upload" android:layout_gravity="center_horizontal|top" android:layout_weight="3"
            android:layout_alignParentRight="true" style="@style/btnStyleShakespeare"/>
</RelativeLayout>